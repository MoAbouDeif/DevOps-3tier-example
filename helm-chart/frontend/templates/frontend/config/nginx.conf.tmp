server {
    listen 80;
    server_name {{ .Values.domainName }};

    root /usr/share/nginx/html;
    index index.html; 

    location /healthz {
        return 200 "alive\n";
        add_header Content-Type text/plain;
    }

    location /ready {
        if (-f /usr/share/nginx/html/index.html) {
            return 200 "ready\n";
        }
        return 503 "not ready\n";
        add_header Content-Type text/plain;
    }

    location /startup {
        return 200 "started\n";
        add_header Content-Type text/plain;
    }

    # API reverse proxy
    location ${REACT_APP_API_BASE_URL} {
        proxy_pass http://{{ .Values.domainName }}:{{ .Values.domainName }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;

        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' 'http://{{ .Values.domainName }}';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'Content-Type';
            add_header 'Access-Control-Allow-Credentials' 'true';
            add_header 'Content-Length' 0;
            return 204;
        }
    }
}

server {
    listen 80 default_server;
    server_name _;

    location /healthz {
        return 200 "alive\n";
        add_header Content-Type text/plain;
    }

    location /ready {
        if (-f /usr/share/nginx/html/index.html) {
            return 200 "ready\n";
        }
        return 503 "not ready\n";
        add_header Content-Type text/plain;
    }

    location /startup {
        return 200 "started\n";
        add_header Content-Type text/plain;
    }

    # Default deny for unrecognized hosts
    location / {
        return 401;
    }  
}
